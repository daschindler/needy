<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ffffff"/>
            <stroke android:width="3dip" android:color="@color/colorPrimary" />
            <corners android:radius="10dip"/>
            <padding android:left="0dip" android:top="0dip"
                android:right="0dip" android:bottom="0dip" />
        </shape>
    </item>
    <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/white" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>